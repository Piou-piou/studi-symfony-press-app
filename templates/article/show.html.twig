{% extends 'base.html.twig' %}

{% block body %}
    <article>
        <h2>{{  article.title }}</h2>
        <h3>{{ article.category }}</h3>

        {{ article.content }}

        {% if article.publishedAt %}
            <p>Article publi√© le {{ article.publishedAt }}</p>
        {% else %}
            <p>{{ article.status }}</p>
        {% endif %}
    </article>

    <div>
        {% for comment in article.comments  %}
            <p>{{ comment.comment }}</p>
        {% else %}
            <p>Auncun commentaire</p>
        {% endfor %}

        {{ form(form) }}
    </div>
{% endblock %}
