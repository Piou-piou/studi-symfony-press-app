{% extends 'base.html.twig' %}

{% form_theme form with [
    'form/template.html.twig'
] %}

{% block body %}
    <article class="card">
        <div class="card-header">
            <h2>{{  article.title }}</h2>
            <h5>{{ article.category }}</h5>
        </div>

        <div class="card-body">
            {{ article.content }}
        </div>

        <div class="card-footer text-muted">
            {% if article.publishedAt %}
                <p>Article publié le {{ article.publishedAt }}</p>
            {% else %}
                <p>{{ article.status }}</p>
            {% endif %}
        </div>
    </article>

    <div class="mt-3">
        <h3>Commentaires</h3>
        {% for comment in article.comments  %}
            <div class="card mb-3">
                <div class="card-body">
                    <p>{{ comment.comment }}</p>
                </div>
                <div class="card-footer">
                    Publié à {{ comment.publishedAt|date('d/m/Y H:i') }}
                </div>
            </div>
        {% else %}
            <div class="card">
                <div class="card-body">
                    <p>{{ comment.comment }}</p>
                </div>
            </div>
        {% endfor %}

        {{ form(form) }}
    </div>
{% endblock %}
